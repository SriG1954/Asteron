@model AppCoreV1.ABLEModels.AbleIssue;

@{
    ViewData["Title"] = "Edit Issue";
}

<link href="~/css/style4.css" rel="stylesheet" />

<div class="wrapper">
    <!-- Sidebar  -->
    <partial name="_SidebarA" />
    <!-- Page Content  -->
    <div id="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <h4>Edit Issue</h4>
                        <a asp-action="Index" asp-controller="AbleIssues">Back to Issues</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Edit" asp-controller="AbleIssues" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="DateReported" />
                                <div class="form-group">
                                    <label asp-for="ReportedBy" class="control-label"></label>
                                    <input asp-for="ReportedBy" class="form-control" />
                                    <span asp-validation-for="ReportedBy" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label"></label>
                                    <input asp-for="Status" class="form-control" />
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <div class="form-inline">
                                    <input type="submit" value="Save" class="btn btn-success" style="width:150px;" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div>
                        <a asp-action="Index" asp-controller="AbleIssues">Back to Issues</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

