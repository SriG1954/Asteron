                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card content-image">
                                    <a id="viewEventsLink" asp-action="Search" asp-controller="FigTasks"><i class="fas fa-tasks" aria-hidden="true"></i><h5>Tasks</h5></a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="card content-image">
                                    <a id="viewEventsLink" asp-action="Index" asp-controller="Reinsure"><i class="fa fa-wheelchair" aria-hidden="true"></i><h5>Re-Insure</h5></a>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card content-image">
                                    <a id="viewEventsLink" asp-action="Index" asp-controller="Barcodes"><i class="fa fa-barcode" aria-hidden="true"></i><h5>Barcodes</h5></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>

