@using AppCoreV1.AsteronModels;
@using AppCoreV1.Repositories;
@using AppCoreV1.Helper;
@model PaginatedList<Note>

@{
    ViewData["Title"] = "Asteron Note";
    int prevpage = 0;
    int nextpage = 0;
    if (Model.HasNextPage) { nextpage = Model.PageIndex + 1; }
    if (Model.HasPreviousPage) { prevpage = Model.PageIndex - 1; }
}
<script src="~/js/ablereport.js"></script>

<div class="wrapper">
    <!-- Sidebar  -->
    <partial name="_SidebarB" />
    <!-- Page Content  -->
    <div id="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <div class="row">
                            <div style="padding-left:10px;">
                                <h4>Asteron Note</h4>
                                <a asp-action="Index" asp-controller="FL">Back to Home</a>
                                <a asp-action="GetNotes" asp-controller="HelphubDownload" asp-route-column="@ViewBag.column" asp-route-search="@ViewBag.search" asp-route-pageIndex="@Model.PageIndex" class="btn btn-success">Download</a>
                            </div>
                            <div style="float:right;padding-top: 5px;padding-left:10px;">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(ViewBag.action as string, "Helphub", FormMethod.Get, new { @column = ViewBag.column as string, @search = ViewBag.search as string, @page = Model.PageIndex }))
                    {
                        <partial name="_FormSearch" />
                    }
                    <div class="card-body">

                        <table id="tabldata" class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Activityid</th>
                                    <th scope="col">Authorid</th>
                                    <th scope="col">Authoringdate</th>
                                    <th scope="col">Beanversion</th>
                                    <th scope="col">Body</th>
                                    <th scope="col">Claimcontactid</th>
                                    <th scope="col">Claimid</th>
                                    <th scope="col">Confidential</th>
                                    <th scope="col">Createtime</th>
                                    <th scope="col">Createuserid</th>
                                    <th scope="col">ExpcustomernoteExt</th>
                                    <th scope="col">Exposureid</th>
                                    <th scope="col">ExptocustselfserviceExt</th>
                                    <th scope="col">Language</th>
                                    <th scope="col">Matterid</th>
                                    <th scope="col">Publicid</th>
                                    <th scope="col">Retired</th>
                                    <th scope="col">ScIsmanualnote</th>
                                    <th scope="col">Securitytype</th>
                                    <th scope="col">Subject</th>
                                    <th scope="col">Topic</th>
                                    <th scope="col">Updatetime</th>
                                    <th scope="col">Updateuserid</th>
                                    <th scope="col">ClaimnumberRefOnly</th>
                                    <th scope="col">View</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Activityid)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Authorid)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Authoringdate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Beanversion)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Body)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Claimcontactid)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Claimid)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Confidential)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Createtime)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Createuserid)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ExpcustomernoteExt)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Exposureid)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ExptocustselfserviceExt)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Language)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Matterid)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Publicid)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Retired)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ScIsmanualnote)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Securitytype)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Topic)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Updatetime)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Updateuserid)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ClaimnumberRefOnly)</td>
                                        <td><a class="btn btn-outline-secondary" onclick="return GetNote('@item.Id')"><i class="fa fa-info-circle" aria-hidden="true"></i></a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>


                    </div>
                    <div class="card-footer">
                        <nav aria-label="...">
                            <ul class="pagination justify-content-center">
                                @if (Model.TotalPages > 1)
                                {
                                    <li id="fpLink" class="page-item"><a class="page-link" href="./Note?id=@ViewBag.id&column=@ViewBag.column&search=@ViewBag.search&pageIndex=1&pageSize=25">First</a></li>
                                    @if (prevpage > 0)
                                    {
                                        <li id="ppLink" class="page-item"><a class="page-link" href="./Note?id=@ViewBag.id&column=@ViewBag.column&search=@ViewBag.search&pageIndex=@prevpage&pageSize=25">Prev</a></li>
                                    }
                                    <li id="cpLink" class="page-item"><a class="page-link active" href="./Note?id=@ViewBag.id&column=@ViewBag.column&search=@ViewBag.search&pageIndex=@Model.PageIndex&pageSize=25">Page @Model.PageIndex of Pages @Model.TotalPages</a></li>
                                    @if (nextpage > 0)
                                    {
                                        <li id="npLink" class="page-item"><a class="page-link" href="./Note?id=@ViewBag.id&column=@ViewBag.column&search=@ViewBag.search&pageIndex=@nextpage&pageSize=25">Next</a></li>
                                    }
                                    <li id="lpLink" class="page-item"><a class="page-link" href="./Note?id=@ViewBag.id&column=@ViewBag.column&search=@ViewBag.search&pageIndex=@Model.TotalPages&pageSize=25">last</a></li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ModalPage" />