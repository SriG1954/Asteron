@using AppCoreV1.AsteronModels;
@using AppCoreV1.Repositories;
@using AppCoreV1.Helper;
@model ActivityLinks

@{
    ViewData["Title"] = "Asteron Document Links";
    AppCoreV1.AsteronModels.Document _claim = (AppCoreV1.AsteronModels.Document)ViewData["Document"]!;
}
<script src="~/js/asteronreport.js"></script>

<div class="wrapper">
    <!-- Page Content  -->
    <div id="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <div class="row">
                            <div style="padding-left:10px;">
                                <h4>Asteron Document Links</h4>
                                <a asp-action="Document" asp-controller="Asteron">Back to Document</a>
                            </div>
                            <div style="float:right;padding-top: 5px;padding-left:10px;">
                            </div>
                        </div>
                    </div>
                </div>

                <div id="tbltabsearch">

                    <table id="tabldata" class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Entity</th>
                                <th scope="col">DOCUMENT</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr><td>DocumentId</td><td>@_claim.Id</td></tr>
                            <tr><td>ClaimId</td><td>@_claim.Claimid</td></tr>

                        </tbody>
                    </table>

                    <div class="card-body">

                        <div class="accordion" id="accordionExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        <b>Claim Details</b>
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <partial name="../Asteron/_ClaimList" model="@Model.ClaimList" />
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOneA">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOneA" aria-expanded="true" aria-controls="collapseOneA">
                                        <b>Contact Details</b>
                                    </button>
                                </h2>
                                <div id="collapseOneA" class="accordion-collapse collapse show" aria-labelledby="headingOneA" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <partial name="../Asteron/_ContactList" model="@Model.ContactList" />
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOneB">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOneB" aria-expanded="true" aria-controls="collapseOneB">
                                        <b>Policy Details</b>
                                    </button>
                                </h2>
                                <div id="collapseOneB" class="accordion-collapse collapse show" aria-labelledby="headingOneB" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <partial name="../Asteron/_PolicyList" model="@Model.PolicyList" />
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        <b>Document Details</b>
                                    </button>
                                </h2>
                                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <partial name="../Asteron/_DocumentList" model="@Model.DocumentList" />
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingThree">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                        <b>Address Details</b>
                                    </button>
                                </h2>
                                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <partial name="../Asteron/_AddressList" model="@Model.AddressList" />
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ModalPage" />