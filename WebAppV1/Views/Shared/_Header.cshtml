@using Microsoft.AspNetCore.Http
@{
    var _username = Context.Session.GetString("ABLEUserName");
    var displayName = $"{User?.Identity?.Name} {_username}";
}

<header class="top-row navbar navbar-expand header-hgradient border-bottom sticky-top">
    <div class="container-fluid px-4 d-flex align-items-center">

        <!-- Sidebar Toggle -->
        <button id="sidebarToggle"
                class="btn btn-sm btn-outline-secondary me-3"
                type="button" aria-label="Toggle navigation">
            <i class="bi bi-list"></i>
        </button>

        <!-- LEFT: Logo + Title -->
        <div class="d-flex align-items-center gap-2">
            <img src="~/images/rlalogo-colour.png"
                 alt="Resolution Life"
                 class="brand-logo" />

          @*   <span class="fw-semibold fs-5 text-dark">
                Claims Archival
            </span> *@
        </div>

        <!-- RIGHT-SIDE ITEMS (now properly aligned right) -->
        <div class="ms-auto d-flex align-items-center gap-3">

            <a class="nav-link p-0 header-link" href="@Url.Action("Index", "Home")">
                Home
            </a>
            <a class="nav-link p-0 header-link" href="@Url.Action("About", "Home")">
                About
            </a>
            <a class="nav-link p-0 header-link" href="@Url.Action("ContactUs", "Home")">
                Contact
            </a>

            <span class="text-muted">Hello, @displayName</span>

        </div>

    </div>
</header>
