@using Microsoft.AspNetCore.Http
@{
    var _username = Context.Session.GetString("ABLEUserName");
    var displayName = $"{User?.Identity?.Name} {_username}";
}

<header class="top-row navbar navbar-expand bg-body border-bottom sticky-top header-dark">
    <div class="container-fluid px-4 d-flex align-items-center">

        <!-- Sidebar Toggle -->
        <button id="sidebarToggle" class="btn btn-sm btn-outline-secondary me-2"
                type="button" aria-label="Toggle navigation">
            <i class="bi bi-list"></i>
        </button>


        <!-- Logo + Title -->
        <div class="d-flex align-items-center gap-2" id="brandSection">
            <img src="~/images/rlalogo-colour.png"
                 alt="Resolution Life"
                 class="brand-logo" />

            @* <span class="fw-semibold fs-5 text-light">
                Claims Archival
            </span> *@
        </div>


        <!-- Right-side items -->
        <div class="d-flex align-items-center gap-3">
            <span class="text-muted">Hello, @displayName</span>

            <a class="nav-link p-0" href="@Url.Action("About", "Home")">About</a>
            <a class="nav-link p-0" href="@Url.Action("ContactUs", "Home")">Contact</a>
        </div>

    </div>
</header>
