@{
    //Layout = null;
    if(ViewData["Title"] == null)
    {
        ViewData["Title"] = "ClaimHub";
    };
    var title = $"{ViewData["Title"]?.ToString()}-Claims Archival";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons (optional but recommended for nav icons) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- Your styles -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style4.css" />
</head>
<body>
    <div class="page">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="brand px-3 py-3">
                <a class="navbar-brand text-light d-flex align-items-center"
                   href="@Url.Action("Index", "Home")">
                    <i class="bi bi-lightning-charge-fill me-2"></i>
                    <span class="brand-text">Claims Archival</span>
                </a>
            </div>

            <nav class="navmenu d-flex flex-column">
                <a class="nav-link px-3" href="@Url.Action("Index", "Home")">
                    <i class="bi bi-house me-2"></i><span>Home</span>
                </a>
            </nav>

            @await Html.PartialAsync(ViewData["SidebarPartial"] as string ?? "_SidebarS")

        </aside>

        <!-- Main area -->
        <main class="main">
            <partial name="_Header" />

            <div class="content px-4 py-3">
                @RenderBody()
            </div>

            <footer class="footer border-top mt-auto py-3 small text-muted">
                <div class="container-fluid px-4 d-flex justify-content-between">
                    <span>© @DateTime.UtcNow.Year - Resolution Life Australia</span>
                    <a class="link-secondary" href="@Url.Action("Privacy", "Home")">Privacy</a>
                </div>
            </footer>
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/mysearch.js" asp-append-version="true"></script>

    <!-- Sidebar toggle behavior -->
    <script>
        (() => {
            const btn = document.getElementById('sidebarToggle');
            const page = document.querySelector('.page');
            const sidebar = document.querySelector('.sidebar');

            function toggleSidebar() {
                // On mobile: slide the sidebar; on desktop: collapse width
                if (window.matchMedia('(max-width: 768px)').matches) {
                    sidebar.classList.toggle('open');
                } else {
                    page.classList.toggle('sidebar-collapsed');
                }
            }

            if (btn) btn.addEventListener('click', toggleSidebar);

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', (e) => {
                if (!sidebar.classList.contains('open')) return;
                const isInside = sidebar.contains(e.target) || (btn && btn.contains(e.target));
                if (!isInside) sidebar.classList.remove('open');
            });
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
