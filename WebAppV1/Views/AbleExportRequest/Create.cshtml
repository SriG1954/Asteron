@using AppCoreV1.ABLEModels;
@using AppCoreV1.Repositories;
@using AppCoreV1.Helper;
@model AppCoreV1.ABLEModels.ReportRequest;

@{
    ViewData["Title"] = "Add Able Export Request";
}
<script src="~/js/ablereport.js"></script>

<div class="wrapper">
    <!-- Sidebar  -->
    <partial name="_SidebarA" />
    <!-- Page Content  -->
    <div id="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <div class="row">
                            <div style="padding-left:10px;">
                                <h4>Add Able Export Request</h4>
                                <a asp-action="Index" asp-controller="Able">Back to Home</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="Create" asp-controller="AbleExportRequest" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>

                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="DateRequested" />
                                    <input type="hidden" asp-for="Status" />
                                    <div class="form-group">
                                        <label asp-for="UserId" class="control-label"></label>
                                        <input asp-for="UserId" class="form-control" />
                                        <span asp-validation-for="UserId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ReportName" class="control-label"></label>
                                        <select class="form-control" asp-for="ReportName" asp-items="@ViewBag.reportnames"></select>
                                        <span asp-validation-for="ReportName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-inline">
                                        <input type="submit" value="Save" class="btn btn-success" style="width:150px;" />
                                    </div>
                                </form>
                            </div>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ModalPage" />